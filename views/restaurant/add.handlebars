<!--   new restaurant  -->
<div class="add-restaurant">
  
  {{#each errorMessages}}
    <div class="error">
      <div class="container">
        <div class="text">
          <p>{{this.msg}}</p>
        </div>
      </div>
    </div>
  {{/each}}

  <div class="container">
    <div class="restaurant">
      <div class="title">新建餐廳</div>
      <form action="/restaurants" method="post">
        <label>名稱</label>
        <br>
        <input type="text" placeholder="名稱" name="name">
        <br>
        <label>英文名稱</label>
        <br>
        <input type="text" placeholder="英文名稱" name="name_en">
        <br>
        <label>種類</label>
        <br>
        <input type="text" placeholder="美式..." name="category">
        <br>
        <label>評價</label>
        <br>
        <input type="text" placeholder="1.0 ~ 5.0" name="rating">
        <br>
        <label>電話</label>
        <br>
        <input type="text" placeholder="0915......" name="phone">
        <br>
        <label>圖片</label>
        <br>
        <input type="text" placeholder="http://..." name="image">
        <br>
        <label>地址</label>
        <br>
        <input type="text" placeholder="台北市中山區......." name="location">
        <br>
        <label>Google 網址</label>
        <br>
        <input type="text" placeholder="Google 網址" name="google_map">
        <br>
        <label>描述</label>
        <br>
        <textarea name="description" cols="30" rows="10" type="text"></textarea>
        <div class="btn">
          <button type="submit">建立</button>
          <button type="submit" formaction="/" formmethod="get">取消</button>
        </div>
      </form>
    </div>
  </div>
</div>
<!--  new restaurant end  -->