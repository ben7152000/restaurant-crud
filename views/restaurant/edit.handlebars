<!--  edit restaurant  -->
<div class="edit-restaurant">
  <div class="container">
    <div class="restaurant">
      <div class="title">編輯餐廳</div>
      <form action="/restaurants/{{ restaurantItem._id }}/edit" method="post">
        <label>名稱</label>
        <br>
        <input type="text" placeholder="名稱" name="name" value="{{ restaurantItem.name }}">
        <br>
        <label>英文名稱</label>
        <br>
        <input type="text" placeholder="英文名稱" name="name_en" value="{{ restaurantItem.name_en }}">
        <br>
        <label>種類</label>
        <br>
        <input type="text" placeholder="種類" name="category" value="{{ restaurantItem.category }}">
        <br>
        <label>評價</label>
        <br>
        <input type="text" placeholder="4.0" name="rating" value="{{ restaurantItem.rating }}">
        <br>
        <label>電話</label>
        <br>
        <input type="text" placeholder="電話" name="phone" value="{{ restaurantItem.phone }}">
        <br>
        <label>圖片</label>
        <br>
        <input type="text" placeholder="http://..." name="image"  value="{{ restaurantItem.image }}">
        <br>
        <label>地址</label>
        <br>
        <input type="text" placeholder="地址" name="location" value="{{ restaurantItem.location }}">
        <br>
        <label>Google 網址</label>
        <br>
        <input type="text" placeholder="Google 網址" name="google_map" value="{{ restaurantItem.google_map }}">
        <br>
        <label>描述</label>
        <br>
        <textarea name="description" cols="30" rows="10" type="text">{{ restaurantItem.description }}</textarea>
        <div class="btn">
          <button type="submit">更新</button>
          <button type="submit" formaction="/restaurants/{{ restaurantItem._id }}" formmethod="get">取消</button>
        </div>
      </form>
    </div>
  </div>
</div>
<!--  edit restaurant end  -->