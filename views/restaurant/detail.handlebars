<!--  detail  -->
<div class="detail">
  <h2 class="title">{{ restaurantItem.name }}</h2>
  <div class="container">
    <div class="pic">
      <img src="{{ restaurantItem.image }}" alt="{{ restaurantItem.name }}">
    </div>
    <div class="text">
      <p>
        <span>
          <i class="fas fa-utensils"></i>
          類別：
        </span>
        {{ restaurantItem.category }}
      </p>
      <p>
        <span>
          <i class="fas fa-map-marker-alt"></i>
          地址：
        </span>
        {{ restaurantItem.location }}
        <a href="{{ restaurantItem.google_map }}" target="_blank">
          <i class="fas fa-location-arrow map"></i>
        </a>
      </p>
      <p>
        <span>
          <i class="fas fa-mobile-alt"></i>
          電話：
        </span>
        {{ restaurantItem.phone }}
      </p>
      <p class="description">
        {{ restaurantItem.description }}
      </p>
    </div>
  </div>
</div>

<div class="icons">
  <div class="icon">
    <a href="/restaurants/{{ restaurantItem._id }}/edit"><i class="fas fa-edit"></i></a>
  </div>
  <div class="icon">
    <a href="/">back</a>
  </div>
  <form action="/restaurants/{{ restaurantItem._id }}/deleteRestaurant" method="post" class="icon">
    <button><i class="fas fa-trash"></i></button>
  </form>
</div>
<!--  detail end  -->