<!-- detail -->
<div class="detail">
  <h2 class="title">{{ item.name }}</h2>
  <div class="container">
    <div class="pic">
      <img src="{{ item.image }}" alt="{{ item.name }}">
    </div>
    <div class="text">
      <p>
        <span>
          <i class="fas fa-utensils"></i>
          類別：
        </span>
        {{ item.category }}
      </p>
      <p>
        <span>
          <i class="fas fa-map-marker-alt"></i>
          地址：
        </span>
        {{ item.location }}
        <a href="{{ item.google_map }}" target="_blank">
          <i class="fas fa-location-arrow map"></i>
        </a>
      </p>
      <p>
        <span>
          <i class="fas fa-mobile-alt"></i>
          電話：
        </span>
        {{ item.phone }}
      </p>
      <p class="description">
        {{ item.description }}
      </p>
    </div>
  </div>
</div>

<div class="icons">
  <div class="icon">
    <a href="/items/{{ item._id }}/edit"><i class="fas fa-edit"></i></a>
  </div>
  <div class="icon">
    <a href="/">back</a>
  </div>
  <form action="/items/{{ item._id }}/deleteItem" method="post" class="icon">
    <button><i class="fas fa-trash"></i></button>
  </form>
</div>
<!-- detail end -->