<!--  banner  -->
<div class="banner">
  <div class="container">
    <div class="text">
      <h1 class="title">Hi! I'm Ben Chou</h1>
      <p>Welcome to Website</p>
      <p>Dining Room List</p>
    </div>
  </div>
</div>
<!--  banner end  -->

<!--  search  -->
<div class="search">
  <div class="container">
    <form action="/search">
      <h4>尋找餐廳：</h4>
      <div class="input">
        <input type="text" name="keyword" placeholder="輸入餐廳、分類" value="{{ keyword }}">
        <button type="submit"><i class="fas fa-search"></i></button>

        <!--  create  -->
        <a href="./restaurants/addRestaurant" class="create"><i class="fas fa-plus"></i></a>
        <!--  create end  -->
        
      </div>
    </form>
  </div>
</div>
<!--  search end  -->

<!-- item list -->
<div class="list">
  <div class="container">
    <div class="item-group">

      {{#each restaurant}}
      <div class="item">
        <div class="pic">
          <a href="/restaurants/{{ this._id }}">
            <img src="{{ this.image }}" alt="{{ this.name }}"></a>
        </div>
        <div class="text">
          <h6 class="title">{{ this.name }}</h6>
          <div class="subtitle">
            <i class="fas fa-utensils"></i>
            {{ this.category }}
          </div>
          <div class="heart">
            {{ this.rating }}
            <i class="fas fa-star"></i>
          </div>
          <div class="map">
            <a href="{{ this.google_map }}" target="_blank">
              <i class="fas fa-location-arrow map"></i>
            </a>
          </div>
          <form action="/restaurants/{{ this._id }}/deleteRestaurant" method="post">
            <button type="submit"><i class="fas fa-trash"></i></button>
          </form>
        </div>
      </div>
      {{/each}}

    </div>
  </div>
</div>
<!-- item list end -->